<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_setup_your_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Setup Your Plan"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_change_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_setup_your_plan"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="You can change the mode anytime in settings"
        android:textColor="#000000"/>

    <RelativeLayout
        android:id="@+id/gradient_1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/tv_change_settings"
        android:layout_margin="10dp"
        android:background="@drawable/bg_gradient_1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vw_divider_1"
            android:layout_marginStart="10dp"
            android:text="RECOMMENDED"
            android:textColor="#ffffff"/>


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:src="@drawable/pie_chart_img"/>

        <TextView
            android:id="@+id/tv_setup_wizard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Setup Wizard"
            android:textColor="#ffffff"/>

        <View
            android:id="@+id/vw_divider_1"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_below="@+id/tv_setup_wizard"
            android:layout_margin="10dp"
            android:background="#ffffff"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gradient_2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:layout_below="@id/gradient_1"
        android:background="@drawable/bg_gradient_2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vw_divider_2"
            android:layout_marginStart="10dp"
            android:text="FOR EXPERTS"
            android:textColor="#ffffff"/>


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/equilizer"/>

        <TextView
            android:id="@+id/tv_start_from_scratch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Start From Scratch"
            android:textColor="#ffffff"/>

        <View
            android:id="@+id/vw_divider_2"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_below="@+id/tv_start_from_scratch"
            android:layout_margin="10dp"
            android:background="#ffffff"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/gradient_2"
        android:layout_margin="10dp"
        android:background="@drawable/bg_gradient_3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vw_divider_3"
            android:layout_marginStart="10dp"
            android:text="FOR COMPLETE BEGINNERS"
            android:textColor="#ffffff"/>


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/note"/>

        <TextView
            android:id="@+id/tv_templates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Templates"
            android:textColor="#ffffff"/>

        <View
            android:id="@+id/vw_divider_3"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_below="@+id/tv_templates"
            android:layout_margin="10dp"
            android:background="#ffffff"/>


    </RelativeLayout>


</RelativeLayout>